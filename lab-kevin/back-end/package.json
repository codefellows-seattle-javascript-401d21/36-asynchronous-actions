{
  "name": "back-end",
  "version": "1.0.0",
  "description": "36: Async Actions Back-end - A 2 resource MongoDB and Express API that references additional resources of the mongoose.js based data model, allowing for resource query population.",
  "main": "index.js",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "start": "node index.js",
    "start:watch": "nodemon index.js --watch",
    "start:debug": "DEBUG=http* nodemon index.js",
    "start-db": "mkdir -p ./data/db && mongod --dbpath ./data/db",
    "stop-db": "killall mongod",
    "lint": "eslint .",
    "lint:test": "npm run lint && npm test",
    "test": "jest -i",
    "test:debug": "DEBUG=http* jest -i",
    "test:watch": "jest -i --watchAll"
  },
  "jest": {
    "setupFiles": [
      "./__test__/lib/jest-setup.js"
    ],
    "verbose": true,
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "./coverage",
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "keywords": [
    "mongodb",
    "express",
    "mongoose",
    "crud",
    "api"
  ],
  "author": "Kevin Miller",
  "license": "MIT",
  "devDependencies": {
    "debug": "^3.1.0",
    "jest": "^22.1.4",
    "superagent": "^3.8.2"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "cors": "^2.8.4",
    "dotenv": "^5.0.0",
    "express": "^4.16.2",
    "faker": "^4.1.0",
    "mocks": "0.0.15",
    "mongoose": "^5.0.3"
  }
}
